{
  "name": "kobelco-be",
  "userName": "Kobelco-BE",
  "version": "1.0.0",
  "description": "Backend Service for Kobelco",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run build:live",
    "dev": "nodemon src/index.ts",
    "build-be": "npx tsc",
    "build": "./node_modules/.bin/tsc -p .",
    "build-fr": "cd ..\\Kobelco-FE && npm run build && npm run generate",
    "build-fr-linux": "cd ../Kobelco-FE && npm run build && npm run generate",
    "copy": "cd ..\\Kobelco-FE && XCOPY dist\\** ..\\Kobelco-BE\\public\\ /E/H/C/I/Y",
    "copy-linux": "cd ../Kobelco-FE/dist && cp -r ./ ../../Kobelco-BE/public/",
    "build:live": "nodemon --watch \"src/**\" --ext \"ts\" --exec \"ts-node\" src/index.ts",
    "build-win": "npm run build-be && npm run build-fr && npm run copy && pkg .",
    "build-linux": "npm run build-be && npm run build-fr-linux && npm run copy-linux && pkg ."
  },
  "author": "Hariharan M",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.18",
    "@types/joi": "^17.2.3",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^20.8.2",
    "bcryptjs": "^2.4.3",
    "chrome-aws-lambda": "^9.1.0",
    "cors": "^2.8.5",
    "csvtojson": "^2.0.14",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.19.2",
    "helmet": "^6.2.0",
    "joi": "^17.11.0",
    "joi-objectid": "^4.0.2",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "mongoose": "^7.5.4",
    "multer": "^1.4.5-lts.1",
    "nodemon": "^3.0.1",
    "pkg": "^5.8.1",
    "puppeteer": "^23.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.4",
    "@types/cors": "^2.8.14",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/qrcode": "^1.5.5"
  },
  "main": "lib/index.js",
  "bin": "lib/index.js",
  "pkg": {
    "scripts": [
      "scripts/**/*.js",
      "node_modules/puppeteer/.local-chromium/**/*"
    ],
    "assets": [
      "node_modules/**/*.js",
      "public/**/*",
      "node_modules/axios/dist/**/*",
      "node_modules/puppeteer/.local-chromium/**/*"
    ],
    "targets": [
      "node18-win-x64",
      "node18-linux-x64"
    ],
    "outputPath": "dist"
  }
}
